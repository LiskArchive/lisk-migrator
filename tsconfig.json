{
	"compilerOptions": {
		"forceConsistentCasingInFileNames": true,
		"target": "es2019",
		"module": "commonjs",
		"declaration": true,
		"moduleResolution": "node",
		"newLine": "lf",
		"noFallthroughCasesInSwitch": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"pretty": true,
		"removeComments": true,
		"resolveJsonModule": true,
		"sourceMap": true,
		"strict": true,
		"composite": true,
		"esModuleInterop": true,
		"importHelpers": true,
		"skipLibCheck": true,
		"outDir": "dist",
		"rootDir": "src"
	},
	"include": ["src/**/*"]
}
